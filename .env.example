# Database Configuration
# IMPORTANT: Copy this file to .env.local and set secure values
# Never commit .env.local to version control

POSTGRES_USER=rickandmorty_dev_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=rickandmorty_dev
POSTGRES_PORT=5432

# Database URL for Prisma
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}

# Next.js Environment Variables
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:4000/graphql
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Ko-fi Configuration (optional)
NEXT_PUBLIC_KOFI_USERNAME=
NEXT_PUBLIC_KOFI_ENABLED=false

# Node Environment
NODE_ENV=development
