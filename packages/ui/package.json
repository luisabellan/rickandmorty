{
  "name": "@rickandmorty/ui",
  "version": "1.0.0",
  "private": true,
  "description": "Shared UI components for Rick and Morty applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./character-card": {
      "import": "./dist/character-card/index.mjs",
      "require": "./dist/character-card/index.js",
      "types": "./dist/character-card/index.d.ts"
    },
    "./character-list": {
      "import": "./dist/character-list/index.mjs", 
      "require": "./dist/character-list/index.js",
      "types": "./dist/character-list/index.d.ts"
    },
    "./navigation": {
      "import": "./dist/navigation/index.mjs",
      "require": "./dist/navigation/index.js", 
      "types": "./dist/navigation/index.d.ts"
    },
    "./welcome-page": {
      "import": "./dist/welcome-page/index.mjs",
      "require": "./dist/welcome-page/index.js",
      "types": "./dist/welcome-page/index.d.ts"
    },
    "./loading-spinner": {
      "import": "./dist/loading-spinner/index.mjs",
      "require": "./dist/loading-spinner/index.js",
      "types": "./dist/loading-spinner/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "^15.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "@rickandmorty/config": "workspace:*",
    "@rickandmorty/test-utils": "workspace:*"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}