{
  "name": "@rickandmorty/api",
  "version": "1.0.0",
  "description": "Rick and Morty API with location filtering for the fansite monorepo",
  "main": "server.js",
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "start": "node ./server.js",
    "dev": "nodemon ./server.js",
    "test": "nyc --check-coverage --lines 95 mocha --exit && nyc report --reporter=lcov",
    "test:watch": "nodemon --ext js ./test --exec 'mocha --reporter min'",
    "test:mock": "mongorestore --host=localhost:27017 --db=rickmorty-test --drop ./test/data",
    "lint": "eslint ."
  },
  "author": "Axel Fuhrmann, Luis Abellan",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "apollo-datasource-rest": "^0.8.1",
    "apollo-server-express": "^2.15.1",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "graphql": "^14.7.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-request": "^7.3.1",
    "mongoose": "^5.12.5",
    "mongoose-mongodb-errors": "0.0.2",
    "morgan": "^1.10.0",
    "prisma": "^6.17.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.4.0",
    "eslint-config-afuh": "^0.1.31",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luisabellan/rickandmorty.git"
  },
  "keywords": [
    "api",
    "rick and morty",
    "graphql",
    "location-filtering"
  ],
  "bugs": {
    "url": "https://github.com/luisabellan/rickandmorty/issues"
  },
  "homepage": "https://github.com/luisabellan/rickandmorty#readme"
}
