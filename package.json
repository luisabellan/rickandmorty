{
  "name": "rickandmorty-monorepo",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "scripts": {
    "dev": "turbo dev",
    "dev:concurrent": "concurrently --names \"FRONTEND,API\" -c \"bgBlue.bold,bgMagenta.bold\" --kill-others-on-fail \"pnpm --filter @rickandmorty/app dev\" \"pnpm --filter @rickandmorty/api dev\"",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:e2e": "turbo test:e2e",
    "test:coverage": "turbo test:coverage",
    "panda:prepare": "turbo panda:prepare",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish",
    "db:start": "docker compose up -d",
    "db:migrate": "cd apps/api && npx prisma migrate dev",
    "db:populate": "cd apps/api && node scripts/populate-db.js",
    "setup": "pnpm db:start && sleep 10 && pnpm db:migrate && pnpm db:populate"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@turbo/gen": "^2.5.8",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.19.0"
  },
  "dependencies": {
    "@apollo/client": "^4.0.7",
    "@apollo/client-integration-nextjs": "^0.14.1",
    "@apollo/experimental-nextjs-app-support": "^0.14.0",
    "eslint-config-next": "^16.0.0",
    "graphql": "^16.11.0",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
